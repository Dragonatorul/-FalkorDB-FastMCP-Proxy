{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "falkordb-remote": {
      "type": "remote",
      "url": "http://localhost:3001/mcp/",
      "enabled": false
    },
    "falkordb-local": {
      "type": "local",
      "command": [
        "python",
        "src/fastmcp_proxy.py"
      ],
      "enabled": true,
      "environment": {
        "FALKORDB_MCPSERVER_URL": "http://localhost:3000",
        "MCP_API_KEY": "dev-api-key",
        "PROXY_HOST": "127.0.0.1",
        "PROXY_PORT": "3002"
      }
    }
  }
}