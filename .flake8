[flake8]
# Flake8 configuration for FalkorDB FastMCP Proxy
max-line-length = 88
max-complexity = 15

# Ignore specific error codes that are acceptable for this project
ignore = 
    # E501: line too long (handled by max-line-length)
    E501,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # F541: f-string is missing placeholders (acceptable for template strings)
    F541

# Exclude directories and files
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    .coverage,
    htmlcov,
    docs/_build

# Allow import reordering for sys.path manipulation in tests
per-file-ignores =
    tests/*.py:E402
    tests/**/*.py:E402

# Show source code for each error
show-source = True

# Show statistics at the end
statistics = True

# Count the number of occurrences of each error/warning code
count = True